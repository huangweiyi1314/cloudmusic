<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_fragment_music_localMusic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/item_imageview_style"
            android:src="@drawable/lay_icn_mobile" />

        <TextView
            style="@style/list_title_style"
            android:text="本地音乐" />

        <TextView
            android:id="@+id/id_fragment_music_localmusNum"
            style="@style/number_textstyle" />
    </LinearLayout>

    <View style="@style/item_divider_view"></View>

    <LinearLayout
        android:id="@+id/id_fragment_music_recentMusic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/item_imageview_style"
            android:src="@drawable/lay_icn_time" />

        <TextView
            style="@style/list_title_style"
            android:text="最近播放" />

        <TextView
            android:id="@+id/id_fragment_music_recentmusicNum"
            style="@style/number_textstyle" />
    </LinearLayout>

    <View style="@style/item_divider_view"></View>

    <LinearLayout
        android:id="@+id/id_fragment_music_downMusic"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/item_imageview_style"
            android:src="@drawable/lay_icn_dld" />

        <TextView
            style="@style/list_title_style"
            android:text="下载管理" />

        <TextView
            android:id="@+id/id_fragment_music_downmusNum"
            style="@style/number_textstyle" />
    </LinearLayout>

    <View style="@style/item_divider_view"></View>

    <LinearLayout
        android:id="@+id/id_fragment_music_mysonger"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <ImageView
            style="@style/item_imageview_style"
            android:src="@drawable/lay_icn_artist" />

        <TextView
            style="@style/list_title_style"
            android:text="我的歌手" />

        <TextView
            android:id="@+id/id_fragment_music_mysongernum"
            style="@style/number_textstyle" />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/id_fragment_music_progreressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/custom_progress"
        android:visibility="gone" />

</LinearLayout>