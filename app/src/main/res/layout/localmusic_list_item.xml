<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/whitesmoke"
    android:paddingLeft="10dp"
    >
    <ImageView
        android:id="@+id/id_musiclist_item_isPlay"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:src="@drawable/song_play_icon"/>
    <TextView
        android:id="@+id/id_musiclist_item_songname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@id/id_musiclist_item_isPlay"
        android:textColor="@color/black"

        android:textSize="14sp"
        android:text="爱在记忆中找你"/>
     <TextView
         android:id="@+id/id_musiclist_item_songner"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/id_musiclist_item_isPlay"
         android:layout_below="@id/id_musiclist_item_songname"
         android:textColor="@color/darkgray"
         android:textSize="12sp"
         android:layout_marginTop="3dp"
         android:text="林峰"/>
    <TextView
        android:id="@+id/id_musiclist_item_songspecial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="活出生命"
        android:layout_below="@id/id_musiclist_item_songname"
        android:layout_marginTop="3dp"
        android:textColor="@color/darkgray"
        android:textSize="12sp"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/id_musiclist_item_songner"/>
       <ImageView
           android:id="@+id/id_musiclist_item_more"
           android:layout_width="13dp"
           android:layout_height="30dp"
           android:layout_centerVertical="true"
           android:layout_marginRight="10dp"
           android:layout_alignParentRight="true"
           android:src="@drawable/list_icn_more"/>
</RelativeLayout>